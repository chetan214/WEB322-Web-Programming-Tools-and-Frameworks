<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User History</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar', { page: "/userHistory" }) %>

  <div class="container mx-auto p-4">
    <div class="hero bg-base-200 rounded-lg p-8 mb-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-4xl font-bold">Login History</h1>
          <p class="py-4">User: <strong><%= session.user.userName %></strong><br>
            Email: <strong><%= session.user.email %></strong></p>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr>
            <th>Date & Time</th>
            <th>Client Info</th>
          </tr>
        </thead>
        <tbody>
          <% session.user.loginHistory.forEach(entry => { %>
            <tr>
              <td><%= entry.dateTime %></td>
              <td><%= entry.userAgent %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
