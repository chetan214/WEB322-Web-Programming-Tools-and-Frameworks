<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add New Historic Site</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-base-100">

  <!-- Navbar -->
  <%- include('partials/navbar', { page: "/addSite" }) %>

  <div class="container mx-auto p-6">
    <div class="hero bg-base-200 rounded-lg p-8 mb-8">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-4xl font-bold mb-2">Add a New Site</h1>
          <p class="text-gray-600">Submit a national historic site to the collection</p>
        </div>
      </div>
    </div>

    <form action="/addSite" method="POST" class="max-w-2xl mx-auto bg-base-100 p-6 rounded-lg shadow-md grid grid-cols-1 gap-4">
      <input name="siteId" type="text" placeholder="Site ID (e.g. AB007)" class="input input-bordered w-full" required>

      <input name="site" type="text" placeholder="Site Name" class="input input-bordered w-full" required>

      <textarea name="description" placeholder="Description" class="textarea textarea-bordered w-full" required></textarea>

      <input name="date" type="number" placeholder="Year (e.g. 1920)" class="input input-bordered w-full">

      <input name="dateType" type="text" placeholder="Date Type (e.g. Built, Opened)" class="input input-bordered w-full">

      <input name="image" type="url" placeholder="Image URL" class="input input-bordered w-full">

      <input name="location" type="text" placeholder="Location (City, Province)" class="input input-bordered w-full">

      <div class="grid grid-cols-2 gap-4">
        <input name="latitude" type="number" step="any" placeholder="Latitude" class="input input-bordered w-full">
        <input name="longitude" type="number" step="any" placeholder="Longitude" class="input input-bordered w-full">
      </div>

      <input name="designated" type="number" placeholder="Designated Year" class="input input-bordered w-full">

      <select name="provinceOrTerritoryCode" class="select select-bordered w-full" required>
        <option disabled selected>Select Province or Territory</option>
        <% provincesAndTerritories.forEach(p => { %>
          <option value="<%= p.code %>"><%= p.name %></option>
        <% }) %>
      </select>

      <div class="text-right">
        <button type="submit" class="btn btn-primary">Add Site</button>
      </div>
    </form>
  </div>
</body>
</html>
