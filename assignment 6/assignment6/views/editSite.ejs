<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Site - <%= site.site %></title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-base-100">

<%- include('partials/navbar', { page: "" }) %>

<div class="container mx-auto p-6">
  <div class="hero bg-base-200 rounded-lg p-8 mb-8">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-4xl font-bold mb-2">Edit Site</h1>
        <p class="text-gray-600">Update details for: <strong><%= site.site %></strong></p>
      </div>
    </div>
  </div>

  <form action="/editSite" method="POST" class="max-w-2xl mx-auto bg-base-100 p-6 rounded-lg shadow-md grid grid-cols-1 gap-4">
    <input name="siteId" type="text" value="<%= site.siteId %>" readonly class="input input-bordered w-full bg-gray-100 cursor-not-allowed">

    <input name="site" type="text" value="<%= site.site %>" placeholder="Site Name" class="input input-bordered w-full" required>

    <textarea name="description" placeholder="Description" class="textarea textarea-bordered w-full"><%= site.description %></textarea>

    <input name="date" type="number" value="<%= site.date %>" class="input input-bordered w-full">
    <input name="dateType" type="text" value="<%= site.dateType %>" class="input input-bordered w-full">
    <input name="image" type="url" value="<%= site.image %>" class="input input-bordered w-full">
    <input name="location" type="text" value="<%= site.location %>" class="input input-bordered w-full">

    <div class="grid grid-cols-2 gap-4">
      <input name="latitude" type="number" step="any" value="<%= site.latitude %>" class="input input-bordered w-full">
      <input name="longitude" type="number" step="any" value="<%= site.longitude %>" class="input input-bordered w-full">
    </div>

    <input name="designated" type="number" value="<%= site.designated %>" class="input input-bordered w-full">

    <select name="provinceOrTerritoryCode" class="select select-bordered w-full" required>
      <% provincesAndTerritories.forEach(p => { %>
        <option value="<%= p.code %>" <%= site.provinceOrTerritoryCode === p.code ? 'selected' : '' %>><%= p.name %></option>
      <% }) %>
    </select>

    <div class="text-right">
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
  </form>
</div>

</body>
</html>
